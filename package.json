    "readline-sync": "^1.4.9",
    "shelljs": "^0.8.3",
    "simple-git": "^1.107.0"
  },
  "devDependencies": {
    "gh-pages": "2.0.1",
    "gitbook-cli": "2.3.0"
  }
}
