{
  "name": "git-quest",
  "version": "0.1.0",
  "description": "Discover git or sharpen your skills through quests",
  "author": "Jérémy Bardon",
  "homepage": "https://jbardon.github.io/git-quest",
  "repository": {
    "type": "git",
    "url": "https://github.com/jbardon/git-quest"
  },
  "bin": {
    "git-quest": "./src/bin/git-quest"
  },
  "main": "src/index.js",
